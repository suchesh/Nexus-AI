<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Background Image -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/bg"/>

    <!-- Semi-transparent white overlay -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#1AFFFFFF"/>

    <!-- Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:shadowColor="#55000000"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="3"
            android:text="Nexus AI"
            android:textColor="#3700B3"
            android:textSize="30sp"
            android:textStyle="bold" />

        <!-- RelativeLayout for prompt and response area -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/tVPrompt"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:background="@drawable/prompt_background"
                android:textSize="18sp"
                android:text="Prompt"
                android:contentDescription="Prompt Display Area"
                android:padding="20dp"
                android:layout_margin="10dp"
                android:textColor="@android:color/black"
                android:layout_alignParentRight="true"/>

            <!-- ScrollView for result -->
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tVPrompt"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp">

                <TextView
                    android:id="@+id/tVResult"
                    android:layout_width="320dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/result_background"
                    android:textSize="18sp"
                    android:text="Result"
                    android:contentDescription="Result Display Area"
                    android:padding="20dp"
                    android:layout_margin="10dp"
                    android:textColor="@android:color/black"/>

            </ScrollView>

        </RelativeLayout>

        <!-- HorizontalScrollView for input section -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:padding="10dp">

                <EditText
                    android:id="@+id/eTPrompt"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="Prompt"
                    android:inputType="text"
                    android:textSize="20sp"
                    android:background="@drawable/prompt_background"
                    android:textColor="@android:color/black"
                    android:padding="10dp"
                    android:layout_marginEnd="5dp"/>

                <ImageButton
                    android:id="@+id/btnSubmit"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:src="@drawable/button_image"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Submit Button"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"
                    android:padding="2dp"/>

            </LinearLayout>
        </HorizontalScrollView>

    </LinearLayout>
</FrameLayout>
